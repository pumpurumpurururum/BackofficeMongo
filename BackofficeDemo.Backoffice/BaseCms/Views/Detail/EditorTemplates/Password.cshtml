@using BaseCms.Common.Validation.Attributes.Base

@using BaseCms.Views.Detail
@{
    var htmlValidationAttribute = BootstrapValidationHelper.GetValidationHtmlAttribute(ViewBag.MetaData.ValidationAttributes as List<ValidationAttribute>);
    var additional_class = ViewBag.@class ?? "span8";
}
@if (!ViewData.ModelMetadata.IsReadOnly)
{
    @Html.Password((string)ViewBag.MetaData.PropertyName, ViewData.TemplateInfo.FormattedModelValue, new { @class = "text-box single-line "+additional_class, validate = htmlValidationAttribute, id="_CMSScopeName_" + ViewBag.MetaData.PropertyName })
}


